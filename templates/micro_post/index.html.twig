{% extends 'base.html.twig' %}

{% block title %}MicroPost index{% endblock %}

{% block body %}
    <a class="btn btn-primary" href="{{ path('micro_post_new') }}">post iets nieuws</a>
    <div class="container">
        <div class="d-flex flex-column-reverse">
            {% for micro_post in micro_posts %}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ micro_post.subject }}</h5>
                        <p class="card-text">
                            {{ micro_post.text }}
                        </p>
                        <a class="btn btn-primary" href="{{ path('micro_post_show', {'id': micro_post.id}) }}">view</a>

                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
        </div>
    </div>

    <style>
        .card-title , .card-text {
            font-family: 'Share Tech Mono', monospace;
        }

        .btn , .btn-primary {
            font-family: 'Share Tech Mono', monospace !important;
        }
    </style>
{% endblock %}
